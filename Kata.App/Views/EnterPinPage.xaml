<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kata_Login.Views.EnterPinPage"
             xmlns:viewModels="clr-namespace:Kata.Core.ViewModels;assembly=Kata.Core"
             x:DataType="viewModels:EnterPinViewModel"
             Title="Settings">
    <ContentPage.Content>
        <VerticalStackLayout>
            <Label Text="PIN" />
            <Entry x:Name="PIN" Text="{Binding PIN}" />
            <Button
                Text="OK"
                Command="{Binding SubmitCommand}" />
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>